<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidApplicationTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#29B6F6</item>
        <item name="colorPrimaryVariant">#42A5F5</item>
        <item name="colorOnPrimary">#C6ECFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#03C8DA</item>
        <item name="colorSecondaryVariant">#017787</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AndroidApplicationTest.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AndroidApplicationTest.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AndroidApplicationTest.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>